<animated-vector
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
                android:width="24dp"
                android:height="24dp"
                android:viewportWidth="24"
                android:viewportHeight="24">
            <path
                    android:name="path1"
                    android:pathData="M 4 18 L 8 18 L 8 20 L 4 20 Z"
                    android:fillColor="@android:color/white"/>
            <path
                    android:name="path2"
                    android:pathData="M 10 18 L 14 18 L 14 20 L 10 20 Z"
                    android:fillColor="@android:color/white"/>
            <path
                    android:name="path3"
                    android:pathData="M 16 18 L 20 18 L 20 20 L 16 20 Z"
                    android:fillColor="@android:color/white"/>
        </vector>
    </aapt:attr>
    <target android:name="path1">
        <aapt:attr name="android:animation">
            <objectAnimator
                    android:propertyName="pathData"
                    android:duration="800"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:valueFrom="M 4 20 L 8 20 L 8 20 L 4 20 Z"
                    android:valueTo="M 4 4 L 8 4 L 8 20 L 4 20 Z"
                    android:valueType="pathType"
                    android:interpolator="@android:anim/linear_interpolator"/>
        </aapt:attr>
    </target>
    <target android:name="path2">
        <aapt:attr name="android:animation">
            <objectAnimator
                    android:propertyName="pathData"
                    android:duration="400"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:valueFrom="M 10 20 L 14 20 L 14 20 L 10 20 Z"
                    android:valueTo="M 10 4 L 14 4 L 14 20 L 10 20 Z"
                    android:valueType="pathType"
                    android:interpolator="@android:anim/linear_interpolator"/>
        </aapt:attr>
    </target>
    <target android:name="path3">
        <aapt:attr name="android:animation">
            <objectAnimator
                    android:propertyName="pathData"
                    android:duration="600"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:valueFrom="M 16 20 L 20 20 L 20 20 L 16 20 Z"
                    android:valueTo="M 16 4 L 20 4 L 20 20 L 16 20 Z"
                    android:valueType="pathType"
                    android:interpolator="@android:anim/linear_interpolator"/>
        </aapt:attr>
    </target>
</animated-vector>
